<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="center_vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:id="@+id/button_PopularMovies"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:padding="20sp"
        android:ellipsize="none"
        android:layout_marginLeft="32sp"
        style="@style/ButtonTheme"
        android:onClick="runApp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Super Duo!"
        android:id="@+id/button_SuperDuo"
        android:textSize="24sp"
        android:padding="20sp"
        android:ellipsize="none"
        android:layout_below="@+id/button_PopularMovies"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="32sp"
        style="@style/ButtonTheme"
        android:onClick="runApp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/button_BuildItBigger"
        android:textSize="24sp"
        android:padding="20sp"
        android:ellipsize="none"
        android:layout_below="@+id/button_SuperDuo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="32sp"
        style="@style/ButtonTheme"
        android:onClick="runApp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Material App"
        android:id="@+id/button_MaterialApp"
        android:textSize="24sp"
        android:padding="20sp"
        android:ellipsize="none"
        android:layout_below="@+id/button_BuildItBigger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="32sp"
        style="@style/ButtonTheme"
        android:onClick="runApp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capstone App"
        android:id="@+id/button_Capstone"
        android:textSize="24sp"
        android:padding="20sp"
        android:ellipsize="none"
        android:layout_below="@+id/button_MaterialApp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="32sp"
        android:textStyle="bold"
        style="@style/ButtonCapstoneTheme"
        android:onClick="runApp" />


</RelativeLayout>
